{
	for (int index{ 0 };index < sizeArray; index++)
	{
		std::cout << "Enter name #" << index + 1 << ":" << '\n';

		std::getline(std::cin, *(namesEmployees + index));
	}

	return namesEmployees;
}

void printNames(std::string* namesEmployees, int sizeArray)
{
	for (int index{ 0 }; index < sizeArray; index++)
	{

	std::cout << "Sorted name #" << index + 1 << ": " << *(namesEmployees + index) << '\n';

	}
