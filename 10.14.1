#include <iostream>
#include <string>
#include <algorithm>
#include <limits>
#include <cstddef> //для std::size_t

int askAmountNames();
std::string* createNames(std::string* namesEmployees, int sizeArray);
void printNames(std::string* namesEmployees, int sizeArray);

int main()
{
	int sizeArray{ askAmountNames() };

	std::string* namesEmployees{ new std::string[static_cast<std::size_t>(sizeArray)] }; // Можно использовать и тип int главное чтобы компилятор не орал

	std::sort(createNames(namesEmployees, sizeArray), namesEmployees + sizeArray);

	printNames(namesEmployees, sizeArray);

	delete[] namesEmployees;

	return 0;

}

int askAmountNames()
{
	int amountNames{ 0 };

	std::cout << "Enter amount first names what do you need." << '\n';

	std::cin >> amountNames;

	std::cin.ignore(std::numeric_limits<std::streamsize>::max(),'\n');

	return amountNames;
}

